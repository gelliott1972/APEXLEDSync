{
  "name": "unisync",
  "version": "1.0.0",
  "private": true,
  "description": "BIM model tracking coordination board for distributed teams",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean && rm -rf node_modules",
    "db:local": "docker-compose up -d localstack",
    "db:stop": "docker-compose down",
    "cdk:synth": "pnpm --filter infrastructure run synth",
    "cdk:deploy": "pnpm --filter infrastructure run deploy",
    "cdk:diff": "pnpm --filter infrastructure run diff"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "turbo": "^2.3.0",
    "typescript": "^5.7.0"
  },
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.15.0"
}
